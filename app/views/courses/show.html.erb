<div class="uk-container">
  <p id="notice"><%= notice %></p>

  <h2 class="uk-text-center"><%= @course.name %></h2>
  
  <%= @course.description.capitalize %>

  <p>
    <strong>Category:</strong>
    <%= @course.category %>
  </p>

  <% @course.topics.each do |topic| %>
    <%= link_to topic.name, course_topic_path(@course, topic) %><br>
  <% end %>


  <%= link_to 'Agregar un tema', new_course_topic_path(@course) %>
  <%= link_to 'Editar', edit_course_path(@course) %>
</div>
