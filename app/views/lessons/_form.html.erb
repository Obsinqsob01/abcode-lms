<%= form_with(model: lesson, local: true, url: course_topic_lessons_url) do |form| %>
  <% if lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
      <% lesson.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "uk-input" %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, class: "uk-textarea" %>
  </div>

  <div class="field">
    <%= form.label :is_quiz %>
    <%= select_tag(:is_quiz, options_for_select([["si", true], ["No", false]]))%>  
  </div>

  <div id="is-quiz">
    me estoy mostrando
  </div>

  <div class="submit">
    <%= form.submit class: "uk-button uk-button-primary" %>
  </div>
<% end %>

<script>
var isQuiz = document.getElementById("is-quiz");
var isQuizSelect = document.getElementById("is_quiz");

var isSelected = isQuizSelect.value;
isQuiz.style.display = "none";

isQuizSelect.addEventListener("change", val => {
  isSelected = JSON.parse(val.target.value);

  if (isSelected) {
    isQuiz.style.display = "block";
  } else { 
    isQuiz.style.display = "none";
  }
})

</script>
