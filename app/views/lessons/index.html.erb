<% title "Todas las lecciones del tema" %>

<% if !notice.nil? %>
  <div class="uk-alert-success" uk-alert>
    <a class="uk-alert-close" uk-close></a>
    <p><%= notice %></p>
  </div>
<% end %>

<h1>Lessons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Is quiz</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.name %></td>
        <td><%= lesson.content %></td>
        <td><%= lesson.is_quiz %></td>
        <td><%= link_to 'Show', course_topic_lesson_path(params[:course_id], params[:topic_id], lesson) %></td>
        <td><%= link_to 'Edit', edit_course_topic_lesson_path(params[:course_id], params[:topic_id], lesson) %></td>
        <td><%= link_to 'Destroy', course_topic_lesson_path(params[:course_id], params[:topic_id], lesson), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_course_topic_lesson_path %>
