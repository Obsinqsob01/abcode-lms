<div class="uk-container">
  <h2>Registrarse</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="uk-margin">
      <%= f.label :name %> <%= f.text_field :name, autofocus: true, class:
      "uk-input" %>
    </div>

    <div class="uk-margin">
      <%= f.label :email %> <%= f.email_field :email, autocomplete: "email",
      class: "uk-input" %>
    </div>

    <div class="uk-margin">
      <%= f.label :password %> <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %> <%= f.password_field :password, autocomplete: "new-password",
      class: "uk-input" %>
    </div>

    <div class="uk-margin">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "uk-input" %>
    </div>

    <div class="uk-margin">
      <%= f.submit "Registrarse", class: "uk-button uk-button-primary" %>
    </div>
  <% end %> <%= render "devise/shared/links" %>
</div>
